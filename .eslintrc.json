{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:node/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "react",
    "node",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": "off",  // Next.js does not require importing React in JSX files
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "ignores": ["modules"]
      }
    ],
    "no-console": "warn",  // Warn on console.log for production cleanliness
    "prettier/prettier": ["error", { "singleQuote": true, "semi": true }]  // Prettier-specific rules
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
